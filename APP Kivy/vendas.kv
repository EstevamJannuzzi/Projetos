#:import hex kivy.utils.get_color_from_hex

<Btn@Button>:
    background_normal: ''
    background_color: hex('#393939')

<Btn_verde@Button>:
    background_normal: ''
    background_color: hex('#009900')

<Btn_vermelho@Button>:
    background_normal: ''
    background_color: hex('#FF0000')

<Label_azul@Label>:
    canvas.before:
        Color:
            rgba: hex('#080FFF')
        Rectangle:
            size: self.size
            pos: self.pos


<VendasWindows>:
    canvas.before:
        Color:
            rgba: hex('#BA55D3')
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    
    BoxLayout:
        size_hint_y: .1
        spacing: .5
        
        Label:
            id: lbl_bemvindo
            size_hint_x: .25
            text: 'Seja Bem Vindo: '
            color: hex('#FFFFFF')

        GridLayout:
            size_hint_x: .25
            rows: 2
            cols: 2
            Label:
                text: 'Data: '
                color: hex('#FFFFFF')
            Label:
                id: data
                color: hex('#FFFFFF')
            Label:
                text: 'Hora: '
                color: hex('#FFFFFF')
            Label:
                id: hora
                color: hex('#FFFFFF')
        Label:
            size_hint_x: .2
            

        Btn:
            id: admin_btn
            size_hint_x: .15 
            text: 'Administrador'
            on_release: root.admin()

        Btn_vermelho:
            id: sair_btn
            size_hint_x: .15 
            text: 'Sair'
            on_release: root.sair()

    BoxLayout:
        canvas.before:
            Color:
                rgba: hex('#FA8072')
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint_y: .87
          
        BoxLayout:
            size_hint_x: .7
            orientation: 'vertical'
            spacing: '.5'
            GridLayout:
                spacing: .5
                size_hint_y: .1
                rows: 2
                cols: 2

                Label_azul:
                    text: 'Pesquisar Por Código'
                
                Label_azul:
                    text: 'Pesquisar Por Nome'
                
                TextInput:
                    id: pesquisar_codigo
                    multiline: False
                    on_text_validate: root.add_produto_codigo(self.text)
                
                TextInput:
                    id: pesquisar_nome
                    multiline: False
                    on_text_validate: root.add_produto_nome(self.text)


            BoxLayout:
                size_hint_y: .8
                orientation: 'vertical'

                BoxLayout:
                    size_hint_y: .05
                    spacing: .5
                    Label_azul:
                        text: 'COD'
                        size_hint_x: .1
                    Label_azul:
                        text: 'Produto'
                        size_hint_x: .5
                    Label_azul:
                        text: 'QTD'
                        size_hint_x: .1
                    Label_azul:
                        text: 'Preço p/ Unid.'
                        size_hint_x: .15
                    Label_azul:
                        text: 'Valor Total'
                        size_hint_x: .15
                
                BoxLayout:

            BoxLayout:
                size_hint_y: .1
                spacing: .5

                Btn_vermelho:
                    text: 'Deletar'
                    on_release: root.deletar()
                
                Btn_verde:
                    text: 'Atualizar Quantidade'
                    on_release: root.atualizar()


        BoxLayout:
            canvas.before:
                Color:
                    rgba: hex('#FFFFCC')
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_x: .3
    
    BoxLayout:
        size_hint_y: .03
