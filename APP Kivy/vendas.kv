#:import hex kivy.utils.get_color_from_hex

<Btn@Button>:
    background_normal: ''
    background_color: hex('#393939')

<Btn_verde@Button>:
    background_normal: ''
    background_color: hex('#009900')

<Btn_vermelho@Button>:
    background_normal: ''
    background_color: hex('#FF0000')

<Label_azul@Label>:
    canvas.before:
        Color:
            rgba: hex('#080FFF')
        Rectangle:
            size: self.size
            pos: self.pos

<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
<RV>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

<VendasWindows>:
    canvas.before:
        Color:
            rgba: hex('#BA55D3')
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: .1
        spacing: .5
        Label:
            id: lbl_bemvindo
            size_hint_x: .25
            text: 'Seja Bem Vindo: '
            color: hex('#FFFFFF')
        GridLayout:
            size_hint_x: .25
            rows: 2
            cols: 2
            Label:
                text: 'Data: '
                color: hex('#FFFFFF')
            Label:
                id: data
                color: hex('#FFFFFF')
            Label:
                text: 'Hora: '
                color: hex('#FFFFFF')
            Label:
                id: hora
                color: hex('#FFFFFF')
        Label:
            size_hint_x: .2
            

        Btn:
            id: admin_btn
            size_hint_x: .15 
            text: 'Administrador'
            on_release: root.admin()

        Btn_vermelho:
            id: sair_btn
            size_hint_x: .15 
            text: 'Sair'
            on_release: root.sair()

    BoxLayout:
        canvas.before:
            Color:
                rgba: hex('#FA8072')
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint_y: .87
        spacing: .5
          
        BoxLayout:
            size_hint_x: .7
            orientation: 'vertical'
            spacing: '.5'
            GridLayout:
                spacing: .5
                size_hint_y: .1
                rows: 2
                cols: 2

                Label_azul:
                    text: 'Pesquisar Por Código'
                Label_azul:
                    text: 'Pesquisar Por Nome'
                
                TextInput:
                    id: pesquisar_codigo
                    multiline: False
                    on_text_validate: root.add_produto_codigo(self.text)
                
                TextInput:
                    id: pesquisar_nome
                    multiline: False
                    on_text_validate: root.add_produto_nome(self.text)


            BoxLayout:
                size_hint_y: .8
                orientation: 'vertical'

                BoxLayout:
                    size_hint_y: .05
                    spacing: .5
                    Label_azul:
                        text: 'COD'
                        size_hint_x: .1
                    Label_azul:
                        text: 'Produto'
                        size_hint_x: .5
                    Label_azul:
                        text: 'QTD'
                        size_hint_x: .1
                    Label_azul:
                        text: 'Preço'
                        size_hint_x: .15
                    Label_azul:
                        text: 'Total'
                        size_hint_x: .15
                
                RV:
                    id: rvs


            BoxLayout:
                size_hint_y: .1
                spacing: .5

                Btn_vermelho:
                    text: 'Deletar'
                    on_release: root.deletar()
                
                Btn_verde:
                    text: 'Atualizar Quantidade'
                    on_release: root.atualizar()


        BoxLayout:
            canvas.before:
                Color:
                    rgba: hex('#FFFFCC')
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_x: .3
            orientation: 'vertical'

            GridLayout:
                canvas.before:
                    Color:
                        rgba: hex('#99FFCC')
                    Rectangle:
                        size: self.size
                        pos: self.pos
                size_hint_y: .4
                rows: 2
                cols: 2

                Label_azul:
                    text:'Sub-Total'

                Label_azul:
                    id: sub-total
                    text:'0.00'

                Label_azul:
                    text:'Total'

                Label_azul:
                    id: total
                    text:'0.00'

            BoxLayout:
                size_hint_y: .6
                orientation: 'vertical'
                spacing: .5

                Label_azul:
                    id: notificacao_falha
                    size_hint_y: .25

                Label_azul:
                    id: notificacao_sucesso
                    size_hint_y: .25

                Btn_verde:
                    size_hint_y: .25
                    id: pagar
                    text: 'Pagar'
                    on_release: root.pagar()

                Btn_verde:
                    size_hint_y: .25
                    id: nova_compra
                    text: 'Nova Compra'
                    on_release: root.nova_compra()
            
    
    BoxLayout:
        size_hint_y: .03
