#:import hex kivy.utils.get_color_from_hex

<Btn@Button>:
    background_normal: ''
    background_color: hex('#F28800')


<Lotery>:
    canvas.before:
		Color:
			rgba: hex('#0059A5')
		Rectangle:
			size: self.size
			pos: self.pos

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'LOTERIA'          

        GridLayout:
            cols: 3

            Label:
                text: 'NÃºmeros Escolhidos:'

            Label:
                id: escolhas


        GridLayout:
            cols: 3

            Btn:
                text:'1'
                on_release: root.um()

            Btn:
                text:'2'
                on_release: root.dois()

            Btn:
                text:'3'
                on_release: root.tres()
